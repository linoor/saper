<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:stretchColumns="0,2" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:text="@string/wartosc_poczatkowa_licznikow"
            android:textColor="@color/kolor_licznikow"
            android:textSize="7mm"
            android:typeface="normal" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:background="android:background=&quot;@null&quot;"
            android:src="@drawable/128_19" />

        <TextView
            android:id="@+id/licznik_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center"
            android:text="@string/wartosc_poczatkowa_licznikow"
            android:textColor="@color/kolor_licznikow"
            android:textSize="7mm" />

    </TableRow>

</TableLayout>